---
export interface Props { title?: string; lang?: string }
const { title = 'sparrow-ai-tech', lang = 'en' } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <slot />
    <!-- inline JS for bundling -->
    <script src="/js/app.js" is:inline></script>
  </body>
</html>
