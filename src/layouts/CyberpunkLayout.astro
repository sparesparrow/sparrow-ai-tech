---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Empowering your workflow with AI-driven tools' } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Preload important fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Import styles -->
    <style>
      @import url('/src/styles/cyberpunk.css');
    </style>
  </head>
  <body>
    <!-- Navigation -->
    <nav class="cyber-nav">
      <div class="cyber-nav-container">
        <div class="cyber-nav-logo cyber-glitch">üê¶ Sparrow AI Tech</div>
        <div class="cyber-nav-links">
          <a href="#home" class="cyber-nav-link active">Home</a>
          <a href="#features" class="cyber-nav-link">Features</a>
          <a href="#tools" class="cyber-nav-link">AI Tools</a>
          <a href="#infographics" class="cyber-nav-link">Infographics</a>
          <a href="#contact" class="cyber-nav-link">Contact</a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Scripts -->
    <script>
      // Import cyberpunk functionality
      import '../scripts/cyberpunk.js';
    </script>
  </body>
</html>
