<style>
  .hero-code-terminal {
    background: var(--color-cyber-surface);
    border: 2px solid var(--color-cyber-green);
    border-radius: 12px;
    box-shadow: 0 0 30px rgba(57, 255, 20, 0.3);
    width: 450px;
    font-family: 'Monaco', 'Menlo', monospace;
    overflow: hidden;
  }

  .terminal-header {
    background: var(--color-cyber-bg);
    padding: 0.75rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--color-cyber-border);
  }

  .terminal-title {
    color: var(--color-cyber-green);
    font-size: 0.9rem;
    text-shadow: 0 0 5px var(--color-cyber-green);
  }

  .terminal-controls {
    display: flex;
    gap: 0.5rem;
  }

  .control {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .control.close {
    background: #ff5f56;
  }
  .control.minimize {
    background: #ffbd2e;
  }
  .control.maximize {
    background: #27ca3f;
  }

  .terminal-body {
    padding: 1rem;
    min-height: 150px;
  }

  .terminal-line {
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  .prompt {
    color: var(--color-cyber-blue);
    margin-right: 0.5rem;
  }

  .command {
    color: var(--color-cyber-text);
  }

  .output {
    margin-left: 1rem;
  }

  .success {
    color: var(--color-cyber-green);
  }
  .info {
    color: var(--color-cyber-blue);
  }
  .warning {
    color: var(--color-cyber-orange);
  }

  .cursor-blink {
    animation: blink 1s infinite;
    color: var(--color-cyber-green);
  }

  @media (max-width: 768px) {
    .hero-code-terminal {
      width: 100%;
      max-width: 350px;
    }
  }
</style>
