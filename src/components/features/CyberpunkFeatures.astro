<style>
  .cyber-card-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1rem 0;
  }

  .tech-tag {
    background: rgba(88, 166, 255, 0.1);
    color: var(--color-cyber-blue);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    border: 1px solid rgba(88, 166, 255, 0.3);
    transition: all 0.3s ease;
  }

  .tech-tag:hover {
    background: rgba(88, 166, 255, 0.2);
    box-shadow: 0 0 10px rgba(88, 166, 255, 0.5);
  }

  .cyber-card-stats {
    display: flex;
    gap: 1.5rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-cyber-border);
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--color-cyber-green);
    text-shadow: 0 0 5px var(--color-cyber-green);
  }

  .stat-label {
    font-size: 0.8rem;
    color: var(--color-cyber-text-dim);
  }
</style>
