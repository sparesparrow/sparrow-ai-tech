  .project-link {
    color: var(--color-cyber-text-dim);
    transition: all 0.3s ease;
  }

  .project-link:hover {
    color: var(--color-cyber-blue);
    transform: scale(1.1);
  }

  .project-description {
    color: var(--color-cyber-text-dim);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .project-features {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .feature-tag {
    background: rgba(57, 255, 20, 0.1);
    color: var(--color-cyber-green);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    border: 1px solid rgba(57, 255, 20, 0.3);
    transition: all 0.3s ease;
  }

  .feature-tag:hover {
    background: rgba(57, 255, 20, 0.2);
    box-shadow: 0 0 10px rgba(57, 255, 20, 0.5);
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-card {
    cursor: pointer;
    position: relative;
  }

  .project-card:focus {
    outline: 2px solid var(--color-cyber-green);
    outline-offset: 2px;
  }

  .project-link:focus {
    outline: 2px solid var(--color-cyber-blue);
    outline-offset: 2px;
  }
</style>
