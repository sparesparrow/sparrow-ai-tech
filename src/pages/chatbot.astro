<style>
  .cyber-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .cyber-section-title {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--color-cyber-text);
  }

  .subtitle {
    color: var(--color-cyber-text-dim);
    font-size: 1.3rem;
    margin-bottom: 2rem;
  }

  .page-content {
    display: grid;
    gap: 4rem;
  }

  .intro-section,
  .features-section,
  .philosophy-section,
  .topics-section,
  .chatbot-section {
    background: var(--color-cyber-surface);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--color-cyber-border);
  }

  .intro-section h2,
  .features-section h2,
  .philosophy-section h2,
  .topics-section h2,
  .chatbot-section h2 {
    color: var(--color-cyber-text);
    margin-bottom: 1rem;
    font-size: 1.8rem;
  }

  .intro-section p,
  .philosophy-section p {
    color: var(--color-cyber-text-dim);
    line-height: 1.6;
    font-size: 1.1rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .feature-card {
    text-align: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    border: 1px solid var(--color-cyber-border);
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    color: var(--color-cyber-text);
    margin-bottom: 1rem;
  }

  .feature-card p {
    color: var(--color-cyber-text-dim);
    line-height: 1.6;
  }

  .topics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }

  .topic-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-cyber-text-dim);
    padding: 0.5rem 0;
  }

  .topic-bullet {
    color: var(--color-cyber-accent);
    font-weight: bold;
  }

  .chatbot-interface {
    text-align: center;
    padding: 3rem 2rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    border: 1px solid var(--color-cyber-border);
  }

  .status-message {
    font-size: 1.5rem;
    color: var(--color-cyber-text);
    margin-bottom: 1rem;
  }

  .status-note {
    color: var(--color-cyber-text-dim);
    margin-bottom: 2rem;
  }

  .coming-soon {
    max-width: 400px;
    margin: 0 auto;
  }

  .progress-bar {
    width: 100%;
    height: 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .progress-fill {
    width: 60%;
    height: 100%;
    background: linear-gradient(90deg, var(--color-cyber-accent), #3498db);
    border-radius: 4px;
    animation: progress 2s ease-in-out infinite;
  }

  @keyframes progress {
    0%,
    100% {
      width: 60%;
    }
    50% {
      width: 80%;
    }
  }

  .coming-soon p {
    color: var(--color-cyber-text-dim);
    font-style: italic;
  }

  @media (max-width: 768px) {
    .cyber-container {
      padding: 1rem;
    }

    .cyber-section-title {
      font-size: 2rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .topics-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
