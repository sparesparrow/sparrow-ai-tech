const t = dict[(lang === 'en' ? 'en' : 'cs')];
---

<CyberpunkLayout title={t.title}>
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    <!-- Language Toggle -->
    <div class="fixed right-4 top-4 z-50">
      <LanguageToggle client:load />
    </div>

    <!-- Header -->
    <section class="pb-16 pt-20">
      <div class="container mx-auto px-6">
        <div class="text-center">
          <h1
            class="mb-6 bg-gradient-to-r from-cyan-400 to-purple-400 bg-clip-text text-4xl font-bold text-transparent md:text-6xl"
          >
            {t.title}
          </h1>
          <p class="mx-auto max-w-3xl text-lg text-slate-300 md:text-xl">
            {t.subtitle}
          </p>
        </div>
      </div>
    </section>

    <!-- Thinkers Grid -->
    <section class="py-12">
      <div class="container mx-auto px-6">
        <div class="grid gap-8 lg:grid-cols-2">
          {
            Object.entries(t.thinkers || {}).map(([key, thinker]) => (
              <div class="rounded-xl border border-slate-700/50 bg-slate-800/30 p-8 backdrop-blur-sm transition-all duration-300 hover:border-cyan-500/30">
                <div class="mb-6">
                  <h3 class="mb-2 text-2xl font-bold text-cyan-400">{thinker.name}</h3>
                  <div class="font-medium text-slate-400">{thinker.domain}</div>
                </div>

                <div class="mb-6">
                  <h4 class="mb-3 text-lg font-semibold text-white">{t.labels.keyIdeas}</h4>
                  <ul class="space-y-2">
                    {thinker.keyIdeas.map((idea: string) => (
                      <li class="flex items-start text-slate-300">
                        <span class="mr-3 mt-2 h-2 w-2 flex-shrink-0 rounded-full bg-purple-400" />
                        <span>{idea}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                <div class="mb-6">
                  <h4 class="mb-3 text-lg font-semibold text-white">{t.labels.influence}</h4>
                  <p class="leading-relaxed text-slate-300">{thinker.influence}</p>
                </div>

                <blockquote class="rounded-r-lg border-l-4 border-cyan-500/50 bg-slate-900/30 p-4 pl-4 italic text-slate-400">
                  {thinker.quote}
                </blockquote>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Synthesis Section -->
    <section class="bg-slate-900/50 py-20">
      <div class="container mx-auto px-6">
        <div class="mb-16 text-center">
          <h2 class="mb-6 text-3xl font-bold text-white md:text-4xl">{t.labels.synthesis}</h2>
          <p class="mx-auto max-w-4xl text-lg text-slate-300">
            {t.labels.synthesisIntro}
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-2">
          <div class="rounded-xl border border-orange-500/30 bg-gradient-to-br from-orange-900/30 to-yellow-900/30 p-8">
            <h3 class="mb-6 text-2xl font-bold text-orange-400">Decentralized Intelligence</h3>
            <p class="mb-4 text-slate-300">
              Drawing from Austrian economics and cyberpunk philosophy, I advocate for AI systems that distribute rather
              than concentrate power.
            </p>
            <ul class="space-y-2 text-slate-300">
              <li>• Model Context Protocol enables agent coordination without central control</li>
              <li>• Price signals → attention mechanisms and resource allocation</li>
              <li>• Individual sovereignty → user control over AI interactions</li>
            </ul>
          </div>

          <div class="rounded-xl border border-purple-500/30 bg-gradient-to-br from-purple-900/30 to-pink-900/30 p-8">
            <h3 class="mb-6 text-2xl font-bold text-purple-400">Safety-First Engineering</h3>
            <p class="mb-4 text-slate-300">
              Combining Anthropic's safety research with security mindset from Mr. Robot philosophy.
            </p>
            <ul class="space-y-2 text-slate-300">
              <li>• Constitutional AI principles embedded in system design</li>
              <li>• Red teaming and adversarial evaluation as default practice</li>
              <li>• Interpretability as a requirement, not an afterthought</li>
            </ul>
          </div>

          <div class="rounded-xl border border-cyan-500/30 bg-gradient-to-br from-blue-900/30 to-cyan-900/30 p-8">
            <h3 class="mb-6 text-2xl font-bold text-cyan-400">Human-Centered Optimization</h3>
            <p class="mb-4 text-slate-300">
              Applying Huberman's neuroscience protocols to human-AI interaction design.
            </p>
            <ul class="space-y-2 text-slate-300">
              <li>• Focus-triggering interfaces that enhance neuroplasticity</li>
              <li>• Stress optimization in learning environments</li>
              <li>• Protocol-driven rather than motivation-dependent systems</li>
            </ul>
          </div>

          <div class="rounded-xl border border-green-500/30 bg-gradient-to-br from-green-900/30 to-emerald-900/30 p-8">
            <h3 class="mb-6 text-2xl font-bold text-green-400">Pragmatic Deployment</h3>
            <p class="mb-4 text-slate-300">
              Following ThePrimeagen's engineering principles and Slush's market validation approach.
            </p>
            <ul class="space-y-2 text-slate-300">
              <li>• Fundamentals first: understand the system before abstractions</li>
              <li>• Ship fast, iterate based on real user feedback</li>
              <li>• Tools that amplify human capability, not replace it</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Back Navigation -->
    <section class="py-12 text-center">
      <a
        href="/sparrow-ai-tech/"
        class="rounded-lg bg-gradient-to-r from-cyan-500 to-purple-500 px-8 py-3 font-medium text-white transition-all duration-300 hover:from-cyan-400 hover:to-purple-400"
      >
        {t.labels.back}
      </a>
    </section>
  </div>
</CyberpunkLayout>
