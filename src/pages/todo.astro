---
import TodoDashboard from '@components/TodoDashboard.jsx';
import fs from 'fs';

const todoMd = fs.readFileSync('./TODO.md', 'utf-8');
---

<html lang="en">
  <head>
    <title>Project TODOs | Sparrow AI Tech</title>
    <meta name="description" content="Interactive dashboard for project TODO.md tasks." />
  </head>
  <body class="min-h-screen bg-gray-100 dark:bg-gray-950">
    <main class="pb-16 pt-12">
      <div class="mx-auto max-w-4xl px-4">
        <h1 class="mb-4 text-4xl font-bold">Project TODOs</h1>
        <p class="mb-8 text-lg text-gray-700 dark:text-gray-300">
          Explore, filter, and track all project tasks directly from the standardized TODO.md file.
        </p>
        <TodoDashboard todoMd={todoMd} />
      </div>
    </main>
  </body>
</html>
