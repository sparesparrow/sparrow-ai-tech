---
import Layout from '../layouts/Layout.astro';
import CyberpunkHero from '../components/CyberpunkHero.astro';
import CyberpunkFeatures from '../components/CyberpunkFeatures.astro';
import RealProjects from '../components/RealProjects.astro';
import PhilosophySection from '../components/PhilosophySection.astro';
---

<Layout title="Sparrow AI Tech | MCP Developer & AI Integration Specialist">
  <main>
    <CyberpunkHero />
    <CyberpunkFeatures />
    <RealProjects />
    <PhilosophySection />
  </main>
</Layout>

<script src="/scripts/enhanced-cyberpunk.js"></script>

<style>
  /* Global cyberpunk theme styles */
  :root {
    --color-cyber-bg: #0d1117;
    --color-cyber-surface: #161b22;
    --color-cyber-green: #39ff14;
    --color-cyber-blue: #58a6ff;
    --color-cyber-orange: #f85149;
    --color-cyber-text: #f0f6fc;
    --color-cyber-text-dim: #8b949e;
    --color-cyber-border: #30363d;
  }
  
  body {
    background: var(--color-cyber-bg);
    color: var(--color-cyber-text);
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  }
  
  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
  }
  
  .fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
