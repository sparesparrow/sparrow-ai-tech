---
import CyberpunkLayout from '../layouts/CyberpunkLayout.astro';
import CyberpunkHero from '../components/CyberpunkHero.astro';
import CyberpunkFeatures from '../components/CyberpunkFeatures.astro';
---

<CyberpunkLayout title="Sparrow AI Tech - AI-Powered Development Tools">
  <CyberpunkHero />
  <CyberpunkFeatures />

  <!-- Enhanced Tools Section -->
  <section id="tools" class="cyber-section">
    <div class="cyber-container">
      <h2 class="cyber-section-title">AI Tools</h2>

      <div class="cyber-cards-grid">
        <div class="cyber-card fade-in">
          <h3 class="cyber-card-title">ü§ñ AI Chatbot</h3>
          <p class="cyber-card-description">
            Intelligent conversational AI powered by advanced language models.
          </p>
          <a href="/chatbot" class="cyber-btn cyber-btn-primary">Launch Chatbot</a>
        </div>

        <div class="cyber-card fade-in">
          <h3 class="cyber-card-title">üìÑ PDF Generator</h3>
          <p class="cyber-card-description">
            Generate professional PDFs from markdown and structured data.
          </p>
          <a href="/pdf-generator" class="cyber-btn cyber-btn-primary">Try Generator</a>
        </div>

        <div class="cyber-card fade-in">
          <h3 class="cyber-card-title">üîß MCP Tools</h3>
          <p class="cyber-card-description">
            Model Context Protocol tools for advanced AI integrations.
          </p>
          <a href="/mcp-tools" class="cyber-btn cyber-btn-primary">Explore MCP</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Infographics Section -->
  <section id="infographics" class="cyber-section" style="background: var(--color-cyber-surface);">
    <div class="cyber-container">
      <h2 class="cyber-section-title">Interactive Infographics</h2>

      <div class="cyber-cards-grid">
        <div class="cyber-card fade-in">
          <h3 class="cyber-card-title">üåê MCP Ecosystem</h3>
          <p class="cyber-card-description">
            Explore the Model Context Protocol ecosystem and its applications.
          </p>
          <a href="/infographics/Infographic1/" class="cyber-btn cyber-btn-outline"
            >View Infographic</a
          >
        </div>

        <div class="cyber-card fade-in">
          <h3 class="cyber-card-title">üß† Human-in-the-Loop AI</h3>
          <p class="cyber-card-description">
            Understanding AI systems with human oversight and control.
          </p>
          <a href="/infographics/Infographic2/" class="cyber-btn cyber-btn-outline"
            >View Infographic</a
          >
        </div>

        <div class="cyber-card fade-in">
          <h3 class="cyber-card-title">üèóÔ∏è Hexagonal Architecture</h3>
          <p class="cyber-card-description">
            Software architecture patterns for maintainable applications.
          </p>
          <a href="/infographics/Infographic3/" class="cyber-btn cyber-btn-outline"
            >View Infographic</a
          >
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="cyber-section">
    <div class="cyber-container">
      <h2 class="cyber-section-title">Get In Touch</h2>

      <div class="text-center">
        <p class="cyber-hero-description" style="max-width: 600px; margin: 0 auto 2rem;">
          Interested in AI automation, MCP protocol, or AI integration? Let's connect and explore
          the possibilities together.
        </p>

        <div class="cyber-hero-cta" style="justify-content: center;">
          <a
            href="https://github.com/sparesparrow"
            class="cyber-btn cyber-btn-primary"
            target="_blank"
            rel="noopener noreferrer"
          >
            GitHub Profile
          </a>
          <a
            href="https://sparesparrow.github.io/cv/"
            class="cyber-btn cyber-btn-outline"
            target="_blank"
            rel="noopener noreferrer"
          >
            View CV
          </a>
        </div>
      </div>
    </div>
  </section>
</CyberpunkLayout>

<style>
  /* Import cyberpunk styles */
  @import '../styles/cyberpunk.css';
</style>

<script>
  // Initialize cyberpunk features
  import '../scripts/cyberpunk.js';
</script>
