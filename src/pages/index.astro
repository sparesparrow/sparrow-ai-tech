<style>
  /* Import enhanced cyberpunk styles */
  @import '../styles/cyberpunk.css';

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-top: 2rem;
  }

  .contact-info h3,
  .contact-links h3 {
    color: var(--color-cyber-green);
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .contact-info p {
    color: var(--color-cyber-text-dim);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .expertise-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .expertise-tag {
    background: rgba(57, 255, 20, 0.1);
    color: var(--color-cyber-green);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.9rem;
    border: 1px solid rgba(57, 255, 20, 0.3);
    transition: all 0.3s ease;
  }

  .expertise-tag:hover {
    background: rgba(57, 255, 20, 0.2);
    box-shadow: 0 0 15px rgba(57, 255, 20, 0.4);
  }

  .contact-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-buttons .cyber-btn {
    justify-content: flex-start;
    gap: 0.75rem;
  }

  /* MCP Links Styling */
  .mcp-link {
    display: block;
    padding: 0.75rem;
    background: rgba(88, 166, 255, 0.1);
    border: 1px solid rgba(88, 166, 255, 0.3);
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-cyber-text);
    transition: all 0.3s ease;
  }

  .mcp-link:hover {
    background: rgba(88, 166, 255, 0.2);
    box-shadow: 0 0 15px rgba(88, 166, 255, 0.4);
    transform: translateY(-2px);
  }

  .mcp-link-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .mcp-icon {
    font-size: 1.5rem;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-buttons {
      align-items: center;
    }

    .mcp-links {
      align-items: center;
    }
  }
</style>
