---
import Layout from '../layouts/Layout.astro';

const lang = Astro.url.searchParams.get('lang') || 'cs';

const t = {
  en: {
    hero: 'Model Context Protocol Pioneer',
    subtitle: 'AI-driven tooling for modern web workflows',
    explore: 'Explore Projects',
    contact: 'Contact',
    quotes: [
      '"The state distorts education by its mere existence; it cannot help but be ideological." — Consequences of State Schooling',
      '"Entrepreneurs do not need state incentives to prosper, only the absence of state obstacles." — The State vs Entrepreneurship',
      '"Cybercrime is an argument for surveillance only to those who forget that crime and state are Siamese twins." — Cybercrime & State Oversight',
      '"A willingness to take risks cannot be legislated away—it only moves underground." — On Risk-taking',
    ],
  },
  cs: {
    hero: 'Průkopník Model Context Protocolu',
    subtitle: 'AI nástroje pro moderní webové workflow',
    explore: 'Prozkoumat projekty',
    contact: 'Kontakt',
    quotes: [
      '„Stát svou existencí deformuje vzdělávání – nikoli proto, že by byl špatný učitel, ale protože nemůže nebýt ideologem." — Následky státního školství',
      '„Podnikatelé k prosperitě nepotřebují státní pobídky, nýbrž absenci státních překážek." — Stát proti podnikání',
      '„Kyberkriminalita je ARGu-ment pro větší dohled jen pro ty, kteří nepochopili, že zločin a stát jsou siamská dvojčata." — Kyberkriminalita…',
      '„Ochota riskovat nelze vymýtit legislativou – lze ji pouze přesunout do ilegality." — Ochota riskovat',
    ],
  },
}[lang];
---

<Layout title="Vojtěch Špaček | MCP Pioneer & AI Integration Specialist">
  <main>
    <!-- Hero Section -->
    <section id="home" class="hero">
      <div class="hero-container">
        <div class="hero-content">
          <h1 class="hero-title">Vojtěch Špaček</h1>
          <div class="hero-subtitle">
            <span id="typewriter" class="typewriter"></span>
            <span class="cursor">|</span>
          </div>
          <p class="hero-description">
            MCP Pioneer & AI Integration Specialist<br />
            Specializuji se na automatizaci, AI orchestraci a moderní vývojové praktiky.
          </p>

          <div class="hero-stats">
            <div class="stat-item">
              <span class="stat-number" data-target="5">0</span>
              <span class="stat-label">MCP Projects</span>
            </div>
            <div class="stat-item">
              <span class="stat-number" data-target="25">0</span>
              <span class="stat-label">% ↑ Test Coverage</span>
            </div>
            <div class="stat-item">
              <span class="stat-number" data-target="40">0</span>
              <span class="stat-label">% Faster Response</span>
            </div>
            <div class="stat-item">
              <span class="stat-number" data-target="30">0</span>
              <span class="stat-label">% ↓ Bugs</span>
            </div>
          </div>

          <div class="hero-cta">
            <a href="#projects" class="btn btn-primary">Explore MCP Projects</a>
            <a href="#" class="btn btn-outline">Professional CV</a>
            <a href="#philosophy" class="btn btn-outline">Philosophy</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Expertise Section -->
    <section id="expertise" class="projects">
      <div class="container">
        <h2 class="section-title">Core Expertise</h2>
        <div class="projects-grid">
          <div class="project-card">
            <div class="project-header">
              <h3 class="project-name">MCP Development</h3>
            </div>
            <p class="project-description">
              Specialized in Model Context Protocol implementation, creating robust servers and clients for AI
              workflows.
            </p>
            <div class="project-tech">
              <span class="tech-tag">MCP v1.0</span>
              <span class="tech-tag">TypeScript</span>
              <span class="tech-tag">Rust</span>
            </div>
          </div>

          <div class="project-card">
            <div class="project-header">
              <h3 class="project-name">AI Orchestration</h3>
            </div>
            <p class="project-description">
              Building intelligent automation systems that coordinate multiple AI services and workflows seamlessly.
            </p>
            <div class="project-tech">
              <span class="tech-tag">AI Orchestration</span>
              <span class="tech-tag">Python</span>
              <span class="tech-tag">PostgreSQL</span>
            </div>
          </div>

          <div class="project-card">
            <div class="project-header">
              <h3 class="project-name">Security & Infrastructure</h3>
            </div>
            <p class="project-description">
              Implementing secure, scalable infrastructure solutions with modern DevOps practices and containerization.
            </p>
            <div class="project-tech">
              <span class="tech-tag">Docker</span>
              <span class="tech-tag">Security</span>
              <span class="tech-tag">Infrastructure</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Philosophy & Quotes Section -->
    <section id="philosophy" class="philosophy">
      <div class="container">
        <h2 class="section-title">Filozofie & Citace</h2>
        <div class="philosophy-quotes">
          {
            t.quotes.map(quote => (
              <div class="quote-item">
                <p class="quote-text">{quote}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact">
      <div class="container">
        <h2 class="section-title">Contact</h2>
        <div class="contact-content">
          <div class="contact-info">
            <h3>Let's Connect</h3>
            <p>
              Interested in MCP development, AI automation, or just want to chat about technology? Feel free to reach
              out!
            </p>
            <div class="contact-links">
              <a
                href="https://github.com/sparesparrow"
                class="btn btn-primary"
                target="_blank"
                rel="noopener noreferrer"
              >
                GitHub Profile
              </a>
              <a href="#" class="btn btn-outline"> Professional CV</a>
              <a href="/infographics" class="btn btn-outline"> MCP Infographics</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Import the main cyberpunk stylesheet */
  @import url('/styles/main.css');
</style>
