{
  "name": "sparrow-ai-tech",
  "version": "0.2.0",
  "description": "Modern Astro + React web project with AI tools, infographics, and interactive features",
  "private": true,
  "type": "module",
  "homepage": "https://sparesparrow.github.io/sparrow-ai-tech/",
  "repository": {
    "type": "git",
    "url": "https://github.com/sparesparrow/sparrow-ai-tech.git"
  },
  "author": "sparesparrow <sparesparrow@protonmail.ch>",
  "license": "MIT",
  "keywords": [
    "astro",
    "react",
    "typescript",
    "tailwindcss",
    "ai-tools",
    "infographics",
    "mermaid",
    "chartjs",
    "elevenlabs",
    "github-pages",
    "static-site"
  ],
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev --host",
    "build": "astro check && astro build",
    "build:dev": "astro build --mode development",
    "preview": "astro preview --host",
    "astro": "astro",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headless": "cypress run --headless",
    "test:e2e:ci": "cypress run --browser chrome --headless",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "lint:report": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --output-file eslint-report.json --format json",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,md,json,css,scss,html}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,md,json,css,scss,html}\"",
    "type-check": "astro check",
    "type-check:watch": "astro check --watch",
    "clean": "rm -rf dist .astro node_modules/.cache coverage cypress/screenshots cypress/videos eslint-report.json",
    "clean:install": "npm run clean && rm -rf node_modules package-lock.json && npm install",
    "fix-all": "npm run type-check && npm run lint:fix && npm run format",
    "check-all": "npm run type-check && npm run lint && npm run format:check && npm run test:ci",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:ci": "npm run check-all && npm run build",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "postinstall": "npm run prepare",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:audit": "npm audit --audit-level moderate",
    "serve:dist": "npx http-server dist -p 3000",
    "analyze": "npm run build && npx astro-bundle-analyzer"
  },
  "dependencies": {
    "@astrojs/react": "^3.6.2",
    "astro": "^5.0.3",
    "chart.js": "^4.4.7",
    "framer-motion": "^11.0.0",
    "mermaid": "^11.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-markdown": "^9.0.0",
    "react-router-dom": "^6.20.0",
    "yet-another-react-lightbox": "^3.15.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^5.1.1",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@eslint/js": "^9.15.0",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@tippyjs/react": "^4.2.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "astro-eslint-parser": "^1.2.2",
    "babel-jest": "^29.7.0",
    "cypress": "^13.17.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "gh-pages": "^6.1.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "puppeteer": "^22.0.0",
    "rehype-mermaid": "^2.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,css,scss,html}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.(js|jsx|ts|tsx)",
      "**/*.(test|spec).(js|jsx|ts|tsx)"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "^src/(.*)$": "<rootDir>/src/$1",
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(astro)$": "<rootDir>/test/__mocks__/astroStub.js"
    },
    "collectCoverageFrom": [
      "src/**/*.(js|jsx|ts|tsx)",
      "!src/**/*.d.ts",
      "!src/**/*.stories.*",
      "!src/**/*.test.*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/sparesparrow"
  }
}
